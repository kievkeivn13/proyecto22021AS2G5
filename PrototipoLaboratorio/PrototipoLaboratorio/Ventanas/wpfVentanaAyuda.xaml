<UserControl x:Class="PrototipoLaboratorio.Ventanas.wpfVentanaAyuda"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrototipoLaboratorio.Ventanas"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1310">
	<Grid>
		<Grid x:Name="Gestión_de_Aseguradoras">
			<Grid.Background>
				<ImageBrush ImageSource="/Ventanas/fondo_2.jpg"/>
			</Grid.Background>
			<TextBox x:Name="txtDescripcion" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="1030" Height="406" TextAlignment="Left" FontSize="14" FontFamily="Century Gothic" VerticalContentAlignment="Center" BorderBrush="{x:Null}" >
				<TextBox.CaretBrush>
					<SolidColorBrush Color="Black" Opacity="0.3"/>
				</TextBox.CaretBrush>
				<TextBox.Background>
					<SolidColorBrush Color="#FF2FB0C8" Opacity="0.15"/>
				</TextBox.Background>
			</TextBox>
			<Label x:Name="lblDescripcion" Content="Descripcion:" HorizontalAlignment="Left" Margin="140,118,0,0" VerticalAlignment="Top" Height="38" Width="364" FontSize="14" FontFamily="Century Gothic" VerticalContentAlignment="Center"/>
		</Grid>

	</Grid>
</UserControl>
